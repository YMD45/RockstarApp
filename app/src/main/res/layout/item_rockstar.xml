<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_raw"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rockstar_img"
        android:padding="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/alert_dark_frame"
        />

    <LinearLayout
        android:layout_width="200dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignTop="@+id/rockstar_img"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/rockstar_img">

        <TextView
            android:layout_weight="1"
            android:id="@+id/rockstar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/rockstar_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/add_bookmark"
        style="?android:attr/starStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/delete_bookmark"
        android:src="@drawable/ic_baseline_restore_from_trash_24"
        android:tint="@color/black"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>